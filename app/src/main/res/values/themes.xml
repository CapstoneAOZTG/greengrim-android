<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Greengrim" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.Greengrim">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TopRadiusImageView" parent="">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AllRadiusImageView" parent="">
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
    </style>

</resources>